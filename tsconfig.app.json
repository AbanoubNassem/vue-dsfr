{
  "extends": [
    "@tsconfig/node18/tsconfig.json",
    "@vue/tsconfig/tsconfig.json"
  ],
  "include": ["env.d.ts", "./src/index.ts"],
  "exclude": ["src/**/__tests__/*", "./demo-app/**"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "esModuleInterop": false,
    "checkJs": true,
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node"]
  }
}
